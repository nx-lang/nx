{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["test/**/*.ts"],
  "exclude": ["node_modules", "out"]
}
