{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "<", "close": ">", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" },
    { "open": "<", "close": ">" }
  ],
  "colorizedBracketPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~!@#%\\^&*()=+[\\]{}\\|;:'\",.\\s<>/]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(?:if|else(?:\\s+if)?|switch|case|default)\\b.*:\\s*$|^\\s*.*\\{\\s*$|^\\s*<(?!(?:/|!)).*[^/]>(\\s*)$",
    "decreaseIndentPattern": "^\\s*(?:/if|/switch)\\b|^\\s*\\}|^\\s*</|^\\s*.*?/>(\\s*)$"
  },
  "folding": {
    "offSide": false
  }
}
